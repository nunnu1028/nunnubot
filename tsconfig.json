{
	"compilerOptions": {
		"experimentalDecorators": true,
		"target": "ES5",
		"module": "CommonJS",
		"lib": ["ES2015"],
		"skipLibCheck": true,
		"baseUrl": "./src/modules/",
		"outDir": "./dist",
		"allowJs": true,
		"esModuleInterop": true
	},
	"include": ["./src/**/*", "./android.d.ts", "./api.d.ts"],
	"ts-node": {
		"files": true,
		"require": ["tsconfig-paths/register"]
	}
}
